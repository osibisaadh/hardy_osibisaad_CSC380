<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="restaurants" type="restaurants"/>

  <xs:complexType name="restaurants">
    <xs:sequence>
      <xs:element name="restaurant" type="restaurant" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="restaurant">
    <xs:sequence>
      <xs:element name="menu" type="menu"/>
    </xs:sequence>
    <xs:attribute name="name" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="menu">
    <xs:sequence>
      <xs:element name="item" type="item" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="item">
    <xs:sequence/>
    <xs:attribute name="name" type="xs:string" use="required"/>
    <xs:attribute name="price" type="xs:double" use="required"/>
  </xs:complexType>
</xs:schema>

